<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="2dp"
       android:layout_centerInParent="true"
       app:cardCornerRadius="20sp"
       app:cardElevation="10sp"
      app:cardBackgroundColor="@color/onecenter"

        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:background="@drawable/draw_layout">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/gor_HH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22:30"
        android:textSize="20dp"
        android:textColor="@color/colorOq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/gor_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toTopOf="@+id/gor_temp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gor_HH"
         />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/gor_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="55 C"
        android:textSize="20sp"
        android:layout_marginBottom="2dp"
        android:textColor="@color/colorOq"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>